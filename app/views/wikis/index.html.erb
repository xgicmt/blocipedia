<div class="content">
<h2>Public Wikis</h2>
<div class="publicContent">
<% if current_user %>
<%= link_to("Create a Wiki", new_wiki_path, class: 'linkButton') %>
<% end %>
<% @wikis.each do |wiki| %>
<div class="indexLinks"><%= link_to wiki.title, wiki %> <span class="smaller">Created by <%= wiki.user.name%></span></div>
<% end %>
</div>
</div>

